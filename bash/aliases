function sigpae_set {
    cd ~/Documents/SIGPAE
    . ~/Documents/virtualenvs/SIGPAEvenv/bin/activate
    \guake -r "Server"
    \guake -e ". ~/Documents/virtualenvs/SIGPAEvenv/bin/activate" -n ~/Documents/SIGPAE -r "SIGPAE"
}

function myguake {
	if [ -z "$1" ]; then
		\guake
	else
		if [ "$1" == "here" ]; then
			shift
			\guake -n $PWD "$@"
		else
			\guake "$@"
		fi
	fi
}

function CPF {
    if [ -z "$1" ]; then
        echo "D:"
    else
        for arg in "$@"; do
            FILE="${arg%%.*}"
            if [ -e "$FILE".cpp ]; then
                echo "$FILE.cpp already exists!"
            else
                cp ~/MEGA/Competitive_Programming/Code2/template.cpp ./"$FILE".cpp
                echo "$FILE.cpp created :)"
            fi
#           subl "$FILE.cpp"
        done
    fi
}

mybeep() {
  ( \speaker-test --frequency 900 --test sine > /dev/null )&
  pid=$!
  \sleep 0.5s
  \kill -9 $pid
}

