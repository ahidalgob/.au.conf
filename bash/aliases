# small alias so ranger exits to current directory
alias ranger='mkdir -p $HOME/tmp; ranger --choosedir=$HOME/tmp/.rangerdir; LASTDIR=`cat $HOME/tmp/.rangerdir`; cd "$LASTDIR"'

mybeep() {
  ( \speaker-test --frequency 900 --test sine > /dev/null )&
  pid=$!
  \sleep 0.5s
  \kill -9 $pid
}



