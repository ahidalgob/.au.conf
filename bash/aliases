
alias tmux='tmux -2'

# small alias so ranger exits to current directory
alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'

mybeep() {
  ( \speaker-test --frequency 900 --test sine > /dev/null )&
  pid=$!
  \sleep 0.5s
  \kill -9 $pid
}


