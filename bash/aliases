alias CP='CPF'
function CPF {
    if [ -z "$1" ]; then
        echo "D:"
    else
        for arg in "$@"; do
            FILE="${arg%%.*}"
            if [ -e "$FILE".cpp ]; then
                echo "$FILE.cpp already exists!"
            else
                cp ~/MegaSync/Competitive_Programming/Code2/template.cpp ./"$FILE".cpp
                echo "$FILE.cpp created :)"
            fi
#           subl "$FILE.cpp"
        done
    fi
}


